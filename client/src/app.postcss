@tailwind base;
@tailwind components;
@tailwind utilities;
@tailwind variants;

html,
body {
	@apply h-full overflow-hidden;
}

:root [data-theme='crimson'] {
	--theme-rounded-base: 8px;
	--theme-rounded-container: 4px;
}

.lightswitch-track {
	@apply rounded;
}

.lightswitch-thumb {
	@apply rounded;
}

.card {
	@apply rounded-half;
}

.rounded {
	border-radius: 24px !important;
}

.rounded-half {
	border-radius: 12px !important;
}
